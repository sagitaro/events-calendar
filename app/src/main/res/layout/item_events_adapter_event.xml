<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  style="@style/Card"
  android:id="@+id/event_container"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  >
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    >
    <TextView
      style="@style/Text.Small.Unimportant"
      android:id="@+id/event_time_text_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/margin_small"
      android:paddingBottom="@dimen/margin_small"
      android:paddingLeft="@dimen/margin_medium"
      android:paddingRight="@dimen/margin_medium"
      tools:text="Time"
      />
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/margin_small"
      android:paddingBottom="@dimen/margin_small"
      android:paddingLeft="@dimen/margin_medium"
      android:paddingRight="@dimen/margin_medium"
      >
      <TextView
        style="@style/Text.Large.Bold"
        android:id="@+id/event_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title"
        />
      <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
      <TextView
        style="@style/Text.Medium.Unimportant"
        android:id="@+id/event_cost_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Cost"
        />
    </LinearLayout>
    <!-- Subtitle section -->
    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/margin_small"
      android:paddingBottom="@dimen/margin_small"
      android:paddingLeft="@dimen/margin_medium"
      android:paddingRight="@dimen/margin_medium"
      >
      <TextView
        style="@style/Text.Medium"
        android:id="@+id/event_subtitle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Subtitle"
        />
      <TextView
        style="@style/Text.Medium.Unimportant"
        android:id="@+id/event_subtitle2_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_medium"
        tools:text="Subtitle2"
        />
    </LinearLayout>
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/margin_small"
      android:paddingBottom="@dimen/margin_small"
      android:paddingLeft="@dimen/margin_medium"
      android:paddingRight="@dimen/margin_medium"
      >
      <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />
      <TextView
        style="@style/Text.Small.Unimportant"
        android:id="@+id/event_capacity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Capacity"
        />
    </LinearLayout>
  </LinearLayout>
</android.support.v7.widget.CardView>